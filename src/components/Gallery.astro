---
// src/components/Gallery.astro
import { galleryData } from '../data.js'; // [cite: momoring0726/kapedadiangas-astro-tailwind/kapedadiangas-astro-tailwind-085111ccb737fbaaba88e1e99fcb92fd267dfea8/src/data.js]
---

<!--
  1. The Gallery Grid
  This now just maps over your images and displays them.
  All <a> tags, modal HTML, and <script> tags have been removed.
-->
<div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
	{
		galleryData.map((item) => (
			<div class="block overflow-hidden rounded-lg shadow-sm">
				<img
					src={item.src}
					alt={item.alt}
					class="w-full h-auto"
					loading="lazy"
				/>
			</div>
		))
	}
</div>

