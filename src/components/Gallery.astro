---
// src/components/Gallery.astro
import { galleryData } from '../data.js';
---

<div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
	{
		galleryData.map((item) => (
			<a
				href={item.src}
				data-alt={item.alt}
				class="gallery-item group block overflow-hidden rounded-lg shadow-sm transition-transform duration-300 hover:-translate-y-1 hover:shadow-lg"
			>
				<img
					src={item.src}
					alt={item.alt}
					class="h-auto w-full transform transition-transform duration-300 group-hover:scale-105"
					loading="lazy"
				/>
			</a>
		))
	}
</div>